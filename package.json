{
	"name": "apex-remote-terminal",
	"displayName": "Apex Remote Terminal",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:apex-remote.terminal"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "apex-remote.terminal",
				"title": "SFDX Start Apex Terminal: Enter Apex Code",
				"when": "sfdx:project_opened"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "apex-remote.runSelectedText",
					"group": "bookmarks",
					"when": "sfdx:project_opened && editorHasSelection"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/jquery": "^3.5.6",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.59.0",
		"babel-eslint": "^10.1.0",
		"eslint": "^7.32.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"ace-builds": "^1.4.12"
	}
}
